@model UserInterface.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@*<a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Регистрация</a>*@
<form asp-action="Login" asp-controller="User" asp-anti-forgery="true" method="post" class="pt-5">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger form-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger form-text"></span>
        </div>
        <div class="form-group pt-4">
            <input type="submit" value="Войти" class="btn btn-success" />
        </div>
    </div>
</form>